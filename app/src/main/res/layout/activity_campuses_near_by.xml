<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical"
    tools:context=".activities.CampusesNearByActivity">

    <ImageView
        android:id="@+id/campuses_near_by_btnClose"
        android:src="@drawable/icon_close"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/campuses_near_by_tvPropertyName"
        android:textAllCaps="true"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        fontPath="fonts/bold.ttf"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingPrefix" />

    <ImageView
        android:src="@drawable/property"
        android:layout_gravity="center_horizontal"
        android:layout_width="280dp"
        android:layout_height="180dp" />

    <Button
        android:id="@+id/campuses_near_by_btnAdd"
        android:text="Add Institution"
        android:padding="10dp"
        android:textColor="#000"
        android:layout_gravity="center_horizontal"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Institutions"
        android:textAllCaps="true"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        fontPath="fonts/bold.ttf"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingPrefix" />

    <ProgressBar
        android:layout_marginTop="20dp"
        android:id="@+id/campuses_near_by_propressBar"
        android:layout_gravity="center_horizontal"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:visibility="gone"
        android:id="@+id/campuses_near_by_tvMessage"
        android:text="No Institutions Added"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_width="280dp"
        android:layout_height="wrap_content" />


    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/campuses_near_by_recyclerVIew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




</LinearLayout>