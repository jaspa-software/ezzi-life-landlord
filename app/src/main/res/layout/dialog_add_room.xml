<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="Room Name/Number"
        fontPath="fonts/bold.ttf"
        android:textSize="22sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingPrefix" />

    <TextView
        android:text="Room Name/Number"
        fontPath="fonts/bold.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingPrefix" />

    <EditText
        android:id="@+id/dialog_add_room_etRoomNumber"
        android:completionHint="Room1/ B0001"
        android:textSize="18sp"
        android:inputType="text"
        android:maxLength="10"
        android:padding="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <TextView
        fontPath="fonts/bold.ttf"
        android:layout_marginTop="10dp"
        android:text="Room Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingPrefix" />

    <RadioGroup
        android:id="@+id/dialog_add_room_rgRoomType"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/dialog_add_room_rbSingle"
            android:text="Single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/dialog_add_room_rbSharing"
            android:text="Sharing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RadioGroup>

    <TextView
        fontPath="fonts/bold.ttf"
        android:layout_marginTop="10dp"
        android:text="Occupants Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingPrefix" />

    <RadioGroup
        android:id="@+id/dialog_add_room_rgOccupantsType"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/dialog_add_room_rbMale"
            android:text="Male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/dialog_add_room_rbFemale"
            android:text="Female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RadioGroup>

    <TextView
        fontPath="fonts/bold.ttf"
        android:layout_marginTop="10dp"
        android:text="Maximum Number Of Occupants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingPrefix" />

    <EditText
        android:id="@+id/dialog_add_room_etTotalNumberOfOccupants"
        android:textSize="18sp"
        android:gravity="center"
        android:padding="10dp"
        android:inputType="number"
        android:maxLength="2"
        android:layout_width="50dp"
        android:layout_height="wrap_content" />

    <TextView
        fontPath="fonts/bold.ttf"
        android:layout_marginTop="10dp"
        android:text="Monthly rental"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingPrefix" />

    <EditText
        android:id="@+id/dialog_add_room_etMonthlyRental"
        android:textSize="18sp"
        android:padding="10dp"
        android:inputType="number"
        android:maxLength="7"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

</LinearLayout>